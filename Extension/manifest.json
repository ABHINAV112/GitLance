{
    "name": "GitLance",
    "version": "1.0",
    "description": "Innovative freelancing solution",
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {}
    },
    "options_page": "",
    "icons": {},
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "jquery.min.js",
                "content.js"
            ]
        }
    ],
    "manifest_version": 2,
    "content_security_policy":"script-src 'self' https://apis.google.com"
}
